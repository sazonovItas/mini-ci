    {
      "name": "4. Tasks",
      "item": [
        {
          "name": "List Tasks (Job)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "// We try to find a task that isn't 'init' or 'cleanup' to see logs, ",
                  "// but for simplicity taking the second one (usually first script)",
                  "if (jsonData.length > 1) {",
                  "    pm.collectionVariables.set(\"taskId\", jsonData[1].id);",
                  "    console.log(\"Task ID set to:\", jsonData[1].id);",
                  "} else if (jsonData.length > 0) {",
                  "    pm.collectionVariables.set(\"taskId\", jsonData[0].id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/jobs/{{jobId}}/tasks",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
