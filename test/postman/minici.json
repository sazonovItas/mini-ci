{
  "info": {
    "_postman_id": "b5a9c8e2-4d1a-4f8b-9e1c-2f3d4a5b6c7d",
    "name": "Mini-CI API",
    "description": "Collection for testing the Mini-CI Workflower API. Run requests in order to automatically populate variables.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Workflows",
      "item": [
        {
          "name": "Create Workflow",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set(\"workflowId\", jsonData.id);",
                  "console.log(\"Workflow ID set to:\", jsonData.id);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Demo Workflow\",\n  \"config\": {\n    \"jobs\": [\n      {\n        \"name\": \"test-job\",\n        \"run\": {\n          \"image\": \"docker.io/library/alpine:latest\",\n          \"cwd\": \"/\",\n          \"env\": [\"TEST_VAR=hello\"],\n          \"scripts\": [\n            {\n              \"name\": \"say-hello\",\n              \"command\": [\"echo\", \"Hello from MiniCI!\"]\n            },\n            {\n              \"name\": \"check-env\",\n              \"command\": [\"env\"]\n            }\n          ]\n        }\n      }\n    ]\n  }\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/workflows",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "workflows"
              ]
            }
          },
          "response": []
        },
        {
          "name": "List Workflows",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/workflows",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "workflows"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Workflow",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/workflows/{{workflowId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "workflows",
                "{{workflowId}}"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Update Workflow",
          "request": {
            "method": "PUT",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Workflow Name\",\n  \"config\": {\n    \"jobs\": [\n      {\n        \"name\": \"updated-job\",\n        \"run\": {\n          \"image\": \"docker.io/library/alpine:latest\",\n          \"scripts\": [\n            {\n              \"name\": \"say-updated\",\n              \"command\": [\"echo\", \"This workflow was updated!\"]\n            }\n          ]\n        }\n      }\n    ]\n  }\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/workflows/{{workflowId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "workflows",
                "{{workflowId}}"
              ]
            }
          },
          "response": []
        }
      ]
    },
